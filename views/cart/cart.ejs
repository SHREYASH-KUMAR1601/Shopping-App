<%- include('../partials/header') %>
<%- include('../partials/navbar') %>
<%- include('../partials/flash') %>

<section class="container py-5">
  <h1 class="display-4 text-center mb-5 fw-bold text-gradient">ðŸ›’ Your Cart</h1>

  <div class="row">
    <!-- Cart Items Section -->
    <div class="col-lg-8 mb-4">
      <% if (user.cart.length > 0) { %>
        <% for(let item of user.cart){ %>
        <div class="card mb-4 border-0 shadow-lg rounded-4 hover-shadow transition">
          <div class="row g-0 align-items-center">
            
            <!-- Product Image -->
            <div class="col-md-4 text-center bg-light p-3 rounded-start">
              <img src="<%= item.img %>" 
                   class="img-fluid rounded" 
                   alt="<%= item.name %>" 
                   style="max-height: 160px; object-fit: contain;">
            </div>

            <!-- Product Details -->
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title fw-bold mb-2 text-dark"><%= item.name %></h5>
                <p class="card-text text-muted small"><%= item.desc %></p>
                <p class="card-text fs-5 fw-bold text-success">â‚¹ <%= item.price.toFixed(2) %></p>

                <!-- Remove Button -->
                <form action="/user/<%= item._id %>/remove" method="POST" class="d-inline">
                  <button type="submit" class="btn btn-outline-danger btn-sm rounded-pill px-3">
                    <i class="bi bi-trash3"></i> Remove
                  </button>
                </form>
              </div>
            </div>

          </div>
        </div>
        <% } %>
      <% } else { %>
        <div class="alert alert-warning text-center rounded-pill shadow-sm" role="alert">
          <i class="bi bi-cart-x"></i> Your cart is empty. Start adding items!
        </div>
      <% } %>
    </div>

    <!-- Summary Section -->
    <div class="col-lg-4">
      <div class="card border-0 shadow-lg rounded-4">
        <div class="card-body">
          <h4 class="card-title fw-bold mb-4 text-center">Order Summary</h4>
          <ul class="list-group list-group-flush mb-4">
            <% for(let item of user.cart){ %>
            <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 small">
              <span><%= item.name %></span>
              <span class="fw-bold">â‚¹ <%= item.price.toFixed(2) %></span>
            </li>
            <% } %>
            <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 border-top pt-3">
              <strong>Total Amount:</strong>
              <span class="fw-bold fs-4 text-primary">â‚¹ <%= totalAmount.toFixed(2) %></span>
            </li>
          </ul>
          <form action="/checkout/<%= user._id %>" method="GET">
            <button type="submit" class="btn btn-success btn-lg w-100 rounded-pill shadow-sm">
              <i class="bi bi-bag-check"></i> Proceed to Checkout
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('../partials/footer') %>
