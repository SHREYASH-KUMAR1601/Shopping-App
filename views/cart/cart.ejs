<%- include('../partials/header') %>
<%- include('../partials/navbar') %>
<%- include('../partials/flash') %>

<section class="container">
  <h1 class="display-4 text-center mt-5 mb-4"><span class=" badge text-primary fw-bold"></span>Your Cart</span></h1>

  <div class="row">
    <div class="col-lg-8">
      <% for(let item of user.cart){ %>
      <div class="card mb-3 border shadow-sm">
        <div class="row g-0">
          <div class="col-md-4">
            <img src="<%= item.img %>" class="img-fluid rounded-start" alt="<%= item.name %>" style="max-width: 150px;">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title"><%= item.name %></h5>
              <p class="card-text"><%= item.desc %></p>
            </div>
          </div>
        </div>
      </div>
      <% } %>
    </div>
    <div class="col-lg-4">
      <div class="card border shadow-sm">
        <div class="card-body">
          <h5 class="card-title">Summary</h5>
          <ul class="list-group list-group-flush">
            <% for(let item of user.cart){ %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <%= item.name %>
              <span class="fw-bold">Rs. <%= item.price.toFixed(2) %></span>
            </li>
            <% } %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <strong>Total Amount:</strong>
              <span class="badge bg-primary fs-5">Rs. <%= totalAmount.toFixed(2) %></span>
            </li>
          </ul>
          <form action="/checkout/<%= user._id %>" method="GET" class="mt-3">
            <button type="submit" class="btn btn-success btn-lg btn-block">Checkout</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('../partials/footer') %>
